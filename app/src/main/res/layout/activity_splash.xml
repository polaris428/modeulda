<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.SplashActivity"
    android:background="#eadfd9">

    <ImageView
        android:id="@+id/loge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="세상을 환하게 빛추는 글"
        android:textSize="20sp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/loding"
        android:textColor="#31251b"
        app:layout_constraintTop_toBottomOf="@+id/loge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>